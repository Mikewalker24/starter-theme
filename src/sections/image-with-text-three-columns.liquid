
<section class="image-with-text-three-columns">
  {% for block in section.blocks %}

    <div class="image-with-text-three-columns__column"
      style="--bg-color:{{ block.settings.bg_color }}; --text-color:{{ block.settings.text_color }}">

      <div class="image-with-text-three-columns__image u-hover-zoom">
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | img_url }}"
            srcset="{{ block.settings.image | img_url: '533x406'}} 533w, {{ block.settings.image | img_url: '1066x812'}} 1066w"
            sizes="33vw"
            alt="{{ block.settings.image.alt | escape }}">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>


      <div class="image-with-text-three-columns__text">
        {% if block.settings.subheading != blank %}
          <div class="caption-container">
            {% render 'icon-pfc' %}
            <span class="caption">{{ block.settings.subheading | escape }}</span>
          </div>
        {% endif %}
        {% if block.settings.heading != blank %}
          <h4>{{ block.settings.heading | escape }}</h4>
        {% endif %}
        {% if block.settings.text != blank %}
          <div>{{ block.settings.text }}</div>
        {% endif %}
      </div>

    </div>
  {% endfor %}


</section>

{% schema %}

{
  "name": "Image with text 3 columns",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "text",
      "name": "Column",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "bg_color",
          "label": "Background color",
          "default": "#e87722",
          "options": [
            {
              "value": "#bc204b",
              "label": "Pink"
            },
            {
              "value": "#514689",
              "label": "Purple"
            },
            {
              "value": "#ffc72c",
              "label": "Yellow"
            },
            {
              "value": "#74aa50",
              "label": "Green"
            },
            {
              "value": "#e87722",
              "label": "Orange"
            }
          ]
        },
        {
          "type": "select",
          "id": "text_color",
          "label": "Text color",
          "default": "#fff",
          "options": [
            {
              "value": "#fff",
              "label": "White"
            },
            {
              "value": "#222",
              "label": "Black"
            }
          ]
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text three columns",
      "category": "Image"
    }
  ]
}

{% endschema %}
